<div class="container p-4">
    <div class="row">
        <!--objeto uno por uno-->
        {{#each datos}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <!--OJO hace referencia a un atributo que es url-->
                                    <!--target  _blank ABRE EN UNA VENTANA NUEVA-->
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                <!--imprime titulo-->
                                {{titulo}}
                            </h3>
                        </a>
                        <!--lo mas apartado posible pone descripcion-->
                        <p class="m-2">{{descripcion}}</p>
                        <P>{{timeago created_at}}</P>
                        <a href="/enlaces/borrar/{{id}}" class="btn btn-danger">Borrar enlace</a>
                        <a href="/enlaces/editar/{{id}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No tienes datos guardados :/ </p>
                    <a href="/enlaces/agregar">Crea una nueva :)</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>