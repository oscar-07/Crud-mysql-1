<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/enlaces/editar/{{datos.id}}" method="POST">
                        <div class="form-group p-2">
                            <input type="text" value="{{datos.titulo}}" class="form-control" name="titulo" placeholder="Titulo" autofocus>
                        </div>
                        <div class="form-group p-2">
                            <input type="url" value="{{datos.url}}" class="form-control" name="url" placeholder="Direccion URL">
                        </div>
                        <div class="form-group p-2">
                            <textarea name="descripcion" class="form-control" rows="2" placeholder="Descripcion">{{datos.descripcion}}</textarea>
                        </div>
                        <div class="form-group p-2">
                            <button class="btn btn-success btn-block">
                                guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>